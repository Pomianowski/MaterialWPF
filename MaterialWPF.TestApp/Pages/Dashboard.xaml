<Page
    x:Class="MaterialWPF.TestApp.Pages.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MaterialWPF.TestApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dashboard"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource MaterialPage}"
    mc:Ignorable="d">

    <Grid Margin="8,0,8,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,4,0">
            <TextBlock
                FontSize="24"
                FontWeight="Bold"
                Text="Material WPF" />
            <TextBlock Text="A simple and uncomplicated way to make your application written in WPF keep up with modern design trends. Library changes the base elements like Window, Page or Button, and also includes additional controls like Navigation or Popup." TextWrapping="WrapWithOverflow" />
        </StackPanel>

        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="4,0,0,0">
            <TextBlock Text="GitHub Page" />
            <TextBlock FontSize="10">
                <Hyperlink
                    Foreground="{StaticResource DefaultAccent}"
                    NavigateUri="https://github.com/rapiddev/MaterialWPF"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/rapiddev/MaterialWPF
                </Hyperlink>
            </TextBlock>

            <TextBlock Margin="0,4,0,0" Text="Nuget Page" />
            <TextBlock FontSize="10">
                <Hyperlink
                    Foreground="{StaticResource DefaultAccent}"
                    NavigateUri="https://www.nuget.org/packages/MaterialWPF/"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    https://www.nuget.org/packages/MaterialWPF/
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="1">
            <TextBlock
                HorizontalAlignment="Right"
                FontSize="10"
                Foreground="{StaticResource ThemeDarkForeground}"
                Text="Created by Leszek Pomianowski under MPL 2.0 License" />
        </Grid>
    </Grid>
</Page>
